{
    "openapi": "3.0.0",
    "info": {
      "title": "Product review API",
      "version": "1.0.0",
      "description": "APIs for getting reviews from a database"
    },
    "paths": {
      "/reviews/{count}/start_date/{start_date}/end_date/{end_date}": {
        "get": {
            "summary": "Gets the list of top n reviews. Do not use this if any product is mentioned.",
            "description": "Gets the list of top n reviews. Do not use this if any product is mentioned.",
            "operationId": "getAllReviewsFilter",
            "parameters": [
                {
                    "name": "count",
                    "in": "path",
                    "description": "count of reviews to return",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                },
                {
                    "name": "start_date",
                    "in": "path",
                    "description": "start date of range of reviews to query",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "name": "end_date",
                    "in": "path",
                    "description": "end date of range of reviews to query",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                }
            ],
            "responses":{
                "200": {
                    "description": "Gets the list of reviews",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "review": {
                                            "type": "string",
                                            "description": "written review of product"
                                        },
                                        "rating": {
                                            "type": "number",
                                            "description": "rating of the product"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "description": "timestamp of the review"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
      },
      "/reviews/{count}/start_date/{start_date}/end_date/{end_date}/reviewer/{reviewer}/description/{description}": {
        "get": {
            "summary": "Gets the list of top n reviews. Use this if any product is mentioned.",
            "description": "Gets the list of top n reviews. Use this if any product is mentioned.",
            "operationId": "getAllReviewsHybrid",
            "parameters": [
                {
                    "name": "count",
                    "in": "path",
                    "description": "count of reviews to return",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                },
                {
                    "name": "start_date",
                    "in": "path",
                    "description": "start date of range of reviews to query",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "name": "end_date",
                    "in": "path",
                    "description": "end date of range of reviews to query",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "name": "description",
                    "in": "path",
                    "description": "description of product",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "reviewer",
                    "in": "path",
                    "description": "reviewer of product",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "responses":{
                "200": {
                    "description": "Gets the list of reviews based on product description",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "generated_text": { 
                                        "type": "string",
                                        "description": "generated text based on product reviews"
                                    },
                                    "reviews":  {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "review": {
                                                    "type": "string",
                                                    "description": "written review of product"
                                                },
                                                "rating": {
                                                    "type": "number",
                                                    "description": "rating of the product"
                                                },
                                                "timestamp": {
                                                    "type": "string",
                                                    "description": "timestamp of the review"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
      }
    }
  }